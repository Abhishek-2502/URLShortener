{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "enabled": true,
        "name": "Annotations & Alerts"
      }
    ]
  },
  "panels": [
    {
      "type": "graph",
      "title": "Backend Uptime",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "Backend",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "min": 0,
          "max": 1
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request Latency (ms)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_errors_total[5m]) / rate(http_request_duration_ms_count[5m]) * 100",
          "legendFormat": "Error rate",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "min": 0,
          "max": 100
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (bytes)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes",
          "legendFormat": "Heap Used",
          "refId": "A"
        },
        {
          "expr": "nodejs_heap_space_size_total_bytes",
          "legendFormat": "Heap Total",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "type": "graph",
      "title": "CPU Usage (user + system seconds)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(process_cpu_user_seconds_total[1m]))",
          "legendFormat": "User CPU",
          "refId": "A"
        },
        {
          "expr": "sum(rate(process_cpu_system_seconds_total[1m]))",
          "legendFormat": "System CPU",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    }
  ],
  "schemaVersion": 30,
  "title": "Backend & Node.js Metrics Dashboard",
  "version": 1
}
